<launch>

    <arg name="veh" value="$(env VEHICLE_NAME)" />
    <arg name="pkg_name" value="sensing"/>
    <arg name="node_name" default="lateral_position_error_node" />

    <!-- Color filter definition -->
    <arg name="color_line" default="yellow" doc="Line color"/>
    
    <group ns="$(arg veh)">

        <!-- Line detector node -->
        <node  name="$(arg node_name)" pkg="$(arg pkg_name)" type="$(arg node_name).py" required="true" output="screen">
            
            <remap from="~image/in/compressed" to="/$(arg veh)/camera_node/image/compressed" />
            
            <!-- Load default values -->
            <rosparam command="load" file="$(find sensing)/config/$(arg node_name)/default.yaml" />

            <!-- Color filter load-->
            <rosparam command="load" file="$(find sensing)/config/$(arg node_name)/color/$(arg color_line).yaml"/>

        </node>
    </group>

</launch>